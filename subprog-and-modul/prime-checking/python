"""
Python Prime Number Checking Examples
====================================
This file demonstrates how to check for prime numbers in Python
using different techniques with if-else statements.
Author: Larie Amimiorg
"""

print("=== PYTHON PRIME CHECKING EXAMPLES ===\n")

# Example 1: Basic prime check function
def is_prime(n):
    if not isinstance(n, int):
        return "Error: Input must be an integer"
    if n <= 1:
        return False
    for i in range(2, int(n ** 0.5) + 1):
        if n % i == 0:
            return False
    return True

num = 7
print(f"Example 1: Checking if {num} is prime")
print(f"{num} is prime? {is_prime(num)}")


# Example 2: Using if-else for direct message
num = 15
print(f"\nExample 2: Prime check with messages for {num}")
if is_prime(num):
    print(f"{num} is a prime number")
else:
    print(f"{num} is not a prime number")


# Example 3: Handling invalid input
num = "hello"
print(f"\nExample 3: Prime check with invalid input ({num})")
result = is_prime(num)
if isinstance(result, str):
    print(result)
else:
    print(f"{num} is prime? {result}")


# Example 4: Checking a range of numbers
print("\nExample 4: Checking primes in range 1â€“20")
for n in range(1, 21):
    print(f"{n}: {'Prime' if is_prime(n) else 'Not Prime'}")

# Conclusion
print("\nPython functions allow flexible prime checking with error handling.")
